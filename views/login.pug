doctype html
html(lang= "en")
    head
        meta(charset= "UTF-8")
        meta(http-equiv= "X-UA-Compatible", content="IE=edge")
        meta(name= "viewport" content= "width=device-width, initial-scale")
        link(rel="stylesheet", href="/css/login.css")
        title Blog de idiomas - MK
    body
        header(class="header")
            img(src="/images/Logo.png", class="logo")
            div(class="botones")
                ul(class="nav-bar")
                    li(class="item"): a(href="/") INICIO
                    li(class="item"): a(href="/polaco") POLACO
                    li(class="item"): a(href="/cultura") CULTURA
                    li(class="item"): a(href="/contactame") CONTACTAME
                    if (_usuario)
                        li(class="item"): a(href="/posts") ADMIN
                        //- li(class="item"): a(href="/editar") POSTEA
                        //- li(class="item"): a(href="/logout") CERRAR
                    else 
                        li(class="item"): a(href="/login") ACCEDER
                //- a(href="/") Â¿?
        div(class="contenedor")
            h2 Ingresa al blog MK
            h2= _msg
            form(id="forma" name="forma" method="post" action="/login")
                div(class="elemento")
                    label(for="usuario") Administrador
                    input(type="email" id="usuario" name="usuario" value="admin@mail.com" required="true")
                div(class="elemento")
                    label(for="password") Password
                    input(type="password" id="password" name="password" value="1234" required="true")
                div(class="elemento")
                    input(type="submit" value="Enviar")