doctype html
html(lang= "en")
    head
        meta(charset= "UTF-8")
        meta(http-equiv= "X-UA-Compatible", content="IE=edge")
        meta(name= "viewport" content= "width=device-width, initial-scale")
        link(rel="stylesheet", href="/css/contactame.css")
        title Blog de idiomas - MK
    body
        header(class="header")
            img(src="/images/Logo.png", class="logo")
            div(class="botones")
                ul(class="nav-bar")
                    li(class="item"): a(href="/") INICIO
                    li(class="item"): a(href="/polaco") POLACO
                    li(class="item"): a(href="/cultura") CULTURA
                    li(class="item"): a(href="/contactame") CONTACTAME
                    if (_usuario)
                        li(class="item"): a(href="/posts") ADMIN
                        //- li(class="item"): a(href="/editar") POSTEA
                        //- li(class="item"): a(href="/logout") CERRAR
                    else 
                        li(class="item"): a(href="/login") ACCEDER
                //- a(href="/") Â¿?
        main
            section(id="contacto")
                div(class="titulo-contacto")
                    h2(class="subtitulos") Queremos conocer tu opinion
                    h1(class="titulos") Contactanos
                form(action="/contact" id="formulario")
                    div(class="two-fiels")
                        div(class="inputConIcon")
                            input(type="text" id="nombre" name="nombre" class="input-text" placeholder="Nombre")
                        div(class="inputConIcon")
                            input(type="email" id= "email" name="email" class="input-email" placeholder="Email")
                    div(class="fiels")
                        div(class="inputConIcon textareaIcon")
                            textarea(name="comentarios" id="comentarios" class="textarea" placeholder="Ingrese su mensaje")
                    div(class="fiels-btn")
                        input(type="submit" class="btns btn-input" value="Enviar")
